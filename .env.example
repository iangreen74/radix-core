# radix-core environment configuration
# Copy this file to .env and modify as needed.

# Execution mode: "development" (default, safe simulation) or "production" (real execution)
RADIX_MODE=development

# Safety settings (development: enforced defaults, production: configurable)
# In development mode these values are enforced and cannot be changed.
# In production mode, cost caps must be > 0 and dry_run/no_deploy can be false.
DRY_RUN=true
NO_DEPLOY_MODE=true
COST_CAP_USD=0.00
MAX_JOB_COST_USD=0.00

# Production mode example:
# RADIX_MODE=production
# DRY_RUN=false
# NO_DEPLOY_MODE=false
# COST_CAP_USD=100.00
# MAX_JOB_COST_USD=10.00

# Execution settings
DEFAULT_EXECUTOR=local_subprocess
MAX_PARALLELISM=4
ENABLE_GPU=false
RAY_LOCAL_MODE=true
RAY_NUM_CPUS=4
RAY_NUM_GPUS=0

# Batching settings
DEFAULT_BATCH_SIZE=32
MAX_BATCH_WAIT=5.0
MICROBATCH_SIZE=8

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# Dashboard (agents/dashboard)
OBSERVER_URL=http://localhost:8081
SCHEDULER_URL=http://localhost:8082
DASHBOARD_PORT=8080
