# radix-core environment configuration
# Copy this file to .env and modify as needed.
# All values shown are the enforced defaults.

# Safety settings (these cannot be overridden to unsafe values)
DRY_RUN=true
NO_DEPLOY_MODE=true
COST_CAP_USD=0.00
MAX_JOB_COST_USD=0.00

# Execution settings
EXECUTOR_TYPE=threadpool
MAX_WORKERS=4
DEFAULT_TIMEOUT_SECONDS=300

# Batching settings
MAX_BATCH_SIZE=32
BATCH_TIMEOUT_SECONDS=5.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# Dashboard (agents/dashboard)
OBSERVER_URL=http://localhost:8081
SCHEDULER_URL=http://localhost:8082
DASHBOARD_PORT=8080
